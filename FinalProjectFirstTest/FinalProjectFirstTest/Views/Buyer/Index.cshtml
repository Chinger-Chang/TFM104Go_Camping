<body>
    <div id="mika">
        <v-app>
            <template>
                <v-carousel class="a"
                            cycle
                            height="400"
                            hide-delimiter-background
                            show-arrows-on-hover>
                    <v-carousel-item v-for="(item,i) in aaa"
