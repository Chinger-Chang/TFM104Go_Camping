							</v-btn>
						</template>
					</v-snackbar>
				</div>
				<div class="text-center">
					@*<v-btn dark
							   color="red darken-2"
							   @@click="snackbar = true">
							訂房<v-icon>mdi-cursor-pointer</v-icon>
						</v-btn>*@

					<v-snackbar v-model="newpw"
								:multi-line="multiLine">
						{{ textpw }}

						<template v-slot:action="{ attrs }">
							<v-btn color="red"
								   text
								   v-bind="attrs"
								   @@click="newpw = false">
								Close
							</v-btn>
						</template>
					</v-snackbar>
				</div>
				<div class="text-center">
					@*<v-btn dark
							   color="red darken-2"
							   @@click="snackbar = true">
							訂房<v-icon>mdi-cursor-pointer</v-icon>
						</v-btn>*@

					<v-snackbar v-model="all"
								:multi-line="multiLine">
						請填寫完全
						<template v-slot:action="{ attrs }">
							<v-btn color="red"
								   text
								   v-bind="attrs"
								   @@click="all = false">
								Close
							</v-btn>
						</template>
					</v-snackbar>
				</div>
				<div class="text-center">
					@*<v-btn dark
							   color="red darken-2"
							   @@click="snackbar = true">
							訂房<v-icon>mdi-cursor-pointer</v-icon>
						</v-btn>*@

					<v-snackbar v-model="pp"
								:multi-line="multiLine">
						手機格式錯誤
						<template v-slot:action="{ attrs }">
							<v-btn color="red"
								   text
								   v-bind="attrs"
								   @@click="pp = false">
								Close
							</v-btn>
						</template>
					</v-snackbar>
				</div>
			</template>

			<div>
				@*<input disabled type="hidden" class="form-control" id="IdId" v-model:value="UsersList.id">

					<div class="form-group">
						<label for="emailId">帳號</label>
						<input disabled type="email" class="form-control" id="emailId" v-model:value="UsersList.email">
					</div>

