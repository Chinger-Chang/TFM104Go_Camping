						</v-row>-->
						<v-row>
							<v-col cols="12" md="12">
								<v-text-field v-model="UsersList.email"
											  @*:rules="nameRules"*@
											  @*:counter="10"*@
											  label="Email"
											  required readonly></v-text-field>
							</v-col>
						</v-row>
						<v-row>
							<v-col cols="12" md="12">
								<v-text-field v-model="UsersList.name"
											  :rules="nameRules"
											  @*:counter="10"*@
											  label="姓名"
											  required></v-text-field>
							</v-col>
						</v-row>
						<v-row>
							<v-col cols="12" md="12">
								<v-text-field v-model="UsersList.phone"
											  :rules="PhoneRules"
											  :counter="10"
											  label="電話"
											  required></v-text-field>
							</v-col>
						</v-row>
						<v-row>
							<v-col cols="12" md="12">
								<div class="text-right">
									<v-dialog v-model="dialog" width="500">
										<template v-slot:activator="{ on, attrs }">
											<v-row style="padding-left: 10px; padding-right: 10px">

												<v-btn color="#CFA79D" dark v-bind="attrs" v-on="on">
													修改密碼
													<v-icon right> mdi-lead-pencil </v-icon>
												</v-btn>

												<v-btn v-on:click="edit" dark tile color="#75809C">
													編輯確認
													<v-icon right> mdi-lead-pencil </v-icon>
												</v-btn>

											</v-row>
										</template>

										<v-card>
											<v-card-title class="text-h5 grey lighten-2">
												修改密碼
											</v-card-title>

											<v-card-text class="text-h6">
												請輸入新密碼
											</v-card-text>

											<v-text-field v-model="pw" style="width:90%;padding-left:10%"
														  @*:rules="nameRules"*@
														  @*:counter="10"*@
														  @*label="新密碼"*@
														  @*required*@></v-text-field>

											@*<v-divider></v-divider>*@

											<v-card-actions>
												<v-spacer></v-spacer>
												<v-btn v-on:click="editPassword" color="#78909C" dark>
													確定@*@@click="dialog = false"*@
												</v-btn>
											</v-card-actions>
										</v-card>
									</v-dialog>
								</div>
							</v-col>
						</v-row>
					</v-container>
				</v-form>
			</template>
			<template>
				<div class="text-center">
					@*<v-btn dark
							   color="red darken-2"
							   @@click="snackbar = true">
							訂房<v-icon>mdi-cursor-pointer</v-icon>
						</v-btn>*@

					<v-snackbar v-model="snackbar"
								:multi-line="multiLine">
