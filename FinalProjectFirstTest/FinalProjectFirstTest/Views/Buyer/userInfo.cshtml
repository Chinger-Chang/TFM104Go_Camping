	<script>
		var v = new Vue({
			el: '#mika',
			vuetify: new Vuetify(),
			data: {
				UsersList: [],
				pw: '',

				a: {
					id: '',
					name: '',
					phone: ''
				},
				b: {
					id: '',
					password: ''
				},
				//--------------------
				valid: false,
				firstname: '',
				lastname: '',
				nameRules: [
					v => !!v || '必填',
					v => v.length <= 10,
				],
				email: '',
				emailRules: [
					v => !!v || 'E-mail is required',
					v => /.+@@.+/.test(v) || 'E-mail must be valid',
				],
				PhoneRules: [
					v => !!v || '必填',
					v => v.length == 10,
				],
				dialog: false,
				//------------------------------------------------
				multiLine: true,
				snackbar: false,
				text: '修改成功',

				newpw: false,
				textpw: '請輸入新密碼',

				all: false,
				pp: false
			},
			methods: {
				edit: function () {

					if (this.UsersList.name.trim() == '') {
						//alert("name is nothing");
						this.all = true;
						return;
					} else {
						this.a.name = this.UsersList.name;
					}

					if (this.UsersList.phone.trim() == '') {
						//alert("phone is nothing");
						this.all = true;
						return;
					} else if (!(/^09[0-9]{8}$/.test(this.UsersList.phone))) {
						//alert("手機格式錯誤");
						this.UsersList.phone = '';
						this.pp = true;
						return;
					}
					else {
						this.a.phone = this.UsersList.phone;
					}
					this.a.id = this.UsersList.id;

					let self = this;
					//POST請求
					axios({
						method: 'post',
						url: '/Buyer/GetNewUserInfo',
						//API要求的資料
						data: self.a,
						headers: { "Content-Type": 'application/json' }
					})
						.then(function (response) {
							if (response.data == true) {
								self.snackbar = true;
								self.dialog = false;
								//alert("修改成功");
								axios.get("/Buyer/GetUserInfo").then(function (res) {
									self.UsersList = res.data;
									console.log(res.data);
									self.pw = '';
								})
							} else {
								//alert("修改失敗");
							}

						})
						.catch(function (response) {
							//handle error
							console.log(response);
						});

				},
				editPassword: function () {

					if (this.pw.trim() == '') {
						//alert("pw is nothing");
						this.newpw = true;
						return;
					} else {
						this.b.password = this.pw;
					}

					this.b.id = this.UsersList.id;

					let self = this;
					//POST請求
					axios({
						method: 'post',
						url: '/Buyer/GetNewUserPW',
						//API要求的資料
						data: self.b,
						headers: { "Content-Type": 'application/json' }
					})
						.then(function (response) {
							if (response.data == true) {
								self.snackbar = true;
								//alert("密碼修改成功");
								//self.isShowEdit = true;
								self.dialog = false;
								axios.get("/Buyer/GetUserInfo").then(function (res) {
									//alert("密碼修改成功");
									self.UsersList = res.data;
									console.log(res.data);
									self.pw = '';
								})
							} else {
								//alert("密碼修改失敗");
							}

						})
						.catch(function (response) {
							//handle error
							console.log(response);
						});

				}
			},
			mounted: function () {
				var self = this;
				axios.get("/Buyer/GetUserInfo").then(function (res) {
					self.UsersList = res.data;
					console.log(res.data);
				})
			}
		})
	</script>
</body>
